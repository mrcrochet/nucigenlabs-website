{
  "buildCommand": "NODE_OPTIONS=--max-old-space-size=4096 npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": null,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/collect",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/process",
      "schedule": "5,20,35,50 * * * *"
    },
    {
      "path": "/api/cron/discover",
      "schedule": "10 */2 * * *"
    },
    {
      "path": "/api/cron/enrich",
      "schedule": "20 */2 * * *"
    },
    {
      "path": "/api/cron/track-perplexity",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/corporate-impact",
      "schedule": "0 */3 * * *"
    },
    {
      "path": "/api/cron/alerts",
      "schedule": "30 * * * *"
    },
    {
      "path": "/api/cron/decision-points",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/watchlist-notifications",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/refresh-prices",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/polymarket",
      "schedule": "40 */4 * * *"
    }
  ]
}

